<form action="/tasks/{{task._id}}/edit" method="POST">

  <!-- TACHE -->
  <!-- Titre (Requis)-->
  <label>Titre</label>
  <input type="text" name="titre" value="{{task.titre}}" required>

  <!-- Description -->
  <label>Description</label>
  <textarea name="description">{{task.description}}</textarea>

  <!-- Date de création -->
  <label>Date de création</label>
  <input type="date" name="dateCreation" value="{{task.dateCreation}}">

  <!-- Échéance -->
  <label>Échéance</label>
  <input type="date" name="echeance" value="{{task.echeance}}">

  <!-- Statut (requis) -->
  <label>Statut</label>
  <select name="statut" value="{{task.statut}}" required>
    <option>à faire</option>
    <option>en cours</option>
    <option>terminée</option>
    <option>annulée</option>
  </select>

  <!-- Priorité (requis) -->
  <label>Priorité</label>
  <select name="priorite" value="{{task.priorite}}" required>
    <option>basse</option>
    <option>moyenne</option>
    <option>haute</option>
    <option>critique</option>
  </select>

  <!-- Catégorie -->
  <label>Catégorie</label>
  <input type="text" name="categorie" value="{{task.categorie}}">


<!-- AUTEUR -->
  <h3>Auteur</h3>
<!-- Nom -->
  <label>Nom</label>
  <input type="text" name="auteurNom" value="{{task.auteur.nom}}"required>
<!-- Prénom -->
  <label>Prénom</label>
  <input type="text" name="auteurPrenom" value="{{task.auteur.prenom}}" required>
<!-- Email -->
  <label>Email</label>
  <input type="email" name="auteurEmail" value="{{task.auteur.email}}" required>

  <br><br>
  <!-- VALIDER -->
  <button type="submit">Modifier la tâche</button>
</form>

